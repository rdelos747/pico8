p={x=64,y=64}
die=false
t=0

function _draw()
	if(not die and btn(4))then
		die=true
		t=2
	end
	cls()
	if(not die)then
		spr(1,p.x,p.y)
	else
		p.y-=0.5
		t+=0.2
		if(t>=10)t=4
		spr(flr(t),p.x,p.y)
	end
end


